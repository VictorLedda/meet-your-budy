{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
  
<section class='customContainerProfil'>
   <a class='consulter-profil-retour' href="{{ path('profil_index') }}">< retour</a>
        
           <div class='consulter-profil-infos'>
               <div class="consulter-profil-image-rond">
             <img class='consulter-profil-image' src='{{ asset('images/profils/' ~ profil.image) }}'/>
           </div>
           <div>
               <h4>Prenom : {{ profil.prenom }}</h4>
            
           
              <h4> Age{{ profil.age }}</h4>
            
           </div>
           </div>
               <h4>Destination : {{ profil.destination ? profil.destination|join(', ') : '' }}</h4>
            
           
              <h4> Date_depart : {{ profil.dateDepart ? profil.dateDepart|date('Y-m-d') : '' }}</h4>
            
           
               <h4>Projet</h4>
               <p>{{ profil.description }}</p>
            
           
               <h4>Tags{{ profil.tags ? profil.tags|join(', ') : '' }}</h4>
            
     

   </section>

